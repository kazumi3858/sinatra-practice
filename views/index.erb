<div class="memo-list-title">
  <h2>My Memos</h2>
</div>
<div class="button">
  <button type="button" onclick="location.href='/new'">Create Memo</button>
</div>
<div class="memo-list">
  <ul>
    <% files = Dir.glob("./memos/*.json").sort_by {|file| File.birthtime(file)} %>
    <% files.reverse.each do |file| %>
    <% data = JSON.parse((File.read(file)), symbolize_names: true) %>
    <li><a href="/memos/<%= data[:id] %>"><%= data[:title] %></a></li>
    <% end %>
  </ul>
</div>
